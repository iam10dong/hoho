<div class="container" style="margin-top:50px">
    <form action="/home/onerecord" method="get" class="form-horizontal">
        <div class="form-group">
            <label for="inputroomnumber" class="col-sm-2 control-label">강의실</label>
            <div class="col-sm-4">
                <input class="form-control" type="text" name="roomnumber" placeholder="강의실번호 입력" value="<%= @roomnumber %>">
            </div>
        </div>
        <div class="form-group">
            <label for="inputweekday" class="col-sm-2 control-label">요일번호</label>
            <div class="col-sm-4">
                <input class="form-control" type="text" name="weekday" placeholder="월요일:1 금요일:5 / 비워두면 모두출력" value="<%= @weekday %>">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input class="btn btn-default" type="submit" value="검색">
            </div>
        </div>
    </form>
</div>

<div class="container" style="margin-top:50px">    
<% if @roominfo != nil %>
    <% if @roominfo.length != 0 %>
        <% @roominfo.each do |r| %>
            <%= r.roomnumber %> - <%= r.timevalue %> - <%= r.weekday %> - <%= r.bulidingname %>
            <% if r.isempty == 1  %>
                <%= "  - 비었음" %>
            <% end %>
        <br>
        <% end %>
    <% else %>
        <%= "검색결과가 없습니다. " %>
    <% end %>
<% else %>
    <%= "검색어를 입력해 주세요." %>
<% end %>

</div>
